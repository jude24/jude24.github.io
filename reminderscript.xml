<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="Event Reminders" />
  <Content type="html">
    <![CDATA[
<!DOCTYPE HTML>
<html lang="en">
<head>
<style>
     #reminder > iframe {display:none;}
</style>
</head>
<body>
<div id="reminder" style="position: relative; overflow:hidden;background-color: #FFFFFF;text-align:center;">
     <iframe src="https://jude24.github.io/Event1.html" name="frame" id="frame" width="220px" frameborder="0" scrolling="no"></iframe>
     <iframe src="https://jude24.github.io/Event2.html" name="frame" id="frame" width="220px" frameborder="0" scrolling="no"></iframe>
     <iframe src="https://jude24.github.io/Event3.html" name="frame" id="frame" width="220px" frameborder="0" scrolling="no"></iframe>
     <iframe src="https://jude24.github.io/Event4.html" name="frame" id="frame" width="220px" frameborder="0" scrolling="no"></iframe>
     <iframe src="https://jude24.github.io/Event5.html" name="frame" id="frame" width="220px" frameborder="0" scrolling="no"></iframe>
     <iframe src="https://jude24.github.io/Event6.html" name="frame" id="frame" width="220px" frameborder="0" scrolling="no"></iframe>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
$( document ).ready(function() {
   $('#reminder > iframe:gt(0)').hide();
	
	setInterval(function() { 
	  $('#reminder > iframe:first')
	    .fadeOut(1000)
	    .next()
	    .fadeIn(1000)
	    .end()
	    .appendTo('#reminder');
	},  3000);
});
</script>
</body>
</html>
]]>
  </Content>
</Module>
